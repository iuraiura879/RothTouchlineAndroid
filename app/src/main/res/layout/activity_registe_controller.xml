<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.roth.touchline.ExistingUserFragment"
    android:background="@mipmap/bg">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#fff"
        android:id="@+id/linearLayout">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageButton"
            android:src="@mipmap/nobutton"
            android:scaleType="fitCenter"
            android:background="#fff"
            android:layout_weight=".3"
            android:padding="5dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageButton1"
            android:src="@mipmap/nobutton"
            android:scaleType="fitCenter"
            android:background="#fff"
            android:layout_weight=".3"
            android:padding="5dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageButton2"
            android:src="@mipmap/info"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="fitCenter"
            android:layout_weight=".3"
            android:padding="5dp"
            android:onClick="infoButtonPressed" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:background="#CBC9C9"
        android:id="@+id/linearLayout2"></LinearLayout>

    <TextView
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="@string/name_unit"
        android:id="@+id/textView"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/editText"
        android:background="@drawable/text_field_custom"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingRight="10dp"
        android:maxLength="10"
        android:paddingLeft="10dp"
        android:layout_alignTop="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_marginTop="15dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp" />





    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="@string/ok"
        android:id="@+id/button5"
        android:layout_above="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:background="@drawable/red_button_custom"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:onClick="onOkPressed" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text="@string/pass"
        android:id="@+id/textView9"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:textSize="20dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/editText6"
        android:background="@drawable/text_field_custom"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingRight="10dp"
        android:maxLength="10"
        android:paddingLeft="10dp"
        android:layout_alignTop="@+id/textView9"
        android:layout_toRightOf="@+id/textView9"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText"
        android:inputType="numberPassword" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="@string/confirm_pass"
        android:id="@+id/textView10"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:textSize="20dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/editText7"
        android:background="@drawable/text_field_custom"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingRight="10dp"
        android:maxLength="10"
        android:paddingLeft="10dp"
        android:layout_alignTop="@+id/textView10"
        android:layout_alignLeft="@+id/editText6"
        android:layout_alignStart="@+id/editText6"
        android:layout_alignRight="@+id/editText6"
        android:layout_alignEnd="@+id/editText6"
        android:layout_marginTop="15dp"
        android:inputType="numberPassword" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/remember_pass"
        android:id="@+id/textView3"
        android:textColor="#000"
        android:textSize="20dp"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView10"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/checkBox"
        android:button="@drawable/custom_checkbox"
        android:scaleX="0.90"
        android:scaleY="0.90"
        android:gravity="center_vertical|center_horizontal"
        android:padding="5dp"
        android:layout_alignTop="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UID 125gf5ds45hgtf5"
        android:id="@+id/textView11"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:textColor="#000"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="2dp"
        android:paddingLeft="2dp"
        android:background="#80ffffff" />


</RelativeLayout>
